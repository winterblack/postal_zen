<p id="notice"><%= notice %></p>

<h1>Address Book</h1>
    <% @addresses.each do |address| %>
        <div class="columns alpha four address-book">
          <fieldset>
            <span class="right"><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></span>
            <span class="right"><%= link_to 'Edit', edit_address_path(address) %></span>
            <%= render :partial => 'spree/shared/address', locals: { address: address } %>
        </div>
    <% end %>

<br>
<hr class="clear"/>
<div>
  <%= button_to 'New Address', new_address_path, method: :get %>
</div>
